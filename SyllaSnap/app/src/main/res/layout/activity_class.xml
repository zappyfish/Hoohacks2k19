<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/class_background"
    tools:context=".test_activities.MaraTestActivity">

    <EditText
        android:layout_width="900px"
        android:layout_height="370px"
        android:hint="     Please enter class name here.


        "
        android:layout_marginTop="700px"
        android:layout_marginLeft="50px"
        android:layout_gravity="center"
        android:id="@+id/mara_test_event_name"/>

    <Button
        android:id="@+id/mara_test"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginTop="630px"
        android:layout_marginLeft="900px"
        android:background="@android:color/transparent"
        android:layout_gravity="bottom"/>


</LinearLayout>